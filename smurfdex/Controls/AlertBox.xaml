<UserControl x:Class="Smurfdex.Controls.AlertBox"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Controls="clr-namespace:Smurfdex.Controls"
			 mc:Ignorable="d" 
			 d:DesignHeight="100" d:DesignWidth="100">
	<Grid>

		<Border Background="Pink" BorderBrush="Crimson" BorderThickness="1" HorizontalAlignment="Stretch" CornerRadius="5" />

		<Label Margin="5" Content="{Binding Text, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Light" Foreground="Crimson"/>

	</Grid>
</UserControl>
