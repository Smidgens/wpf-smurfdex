<UserControl x:Class="Smurfdex.Views.Fragments.AppHeader"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
mc:Ignorable="d" 
d:DesignHeight="50"
d:DesignWidth="800"
>

	<Grid Background="#FF1F8BDD">

		<!-- Column definition -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="50"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="50"/>
		</Grid.ColumnDefinitions>

		<!-- Column content -->
		<Image Source="/Resources/Icons/smurf.png"
		RenderOptions.BitmapScalingMode="Fant"
		Stretch="Fill"
		Margin="5"/>
		<Label
		Content="Smurfdex"
			FontFamily="{StaticResource Tintin}"
		Grid.Column="1" Foreground="White" FontSize="22" VerticalAlignment="Center"/>
		<Image
		Source="/Resources/Icons/cog.png"
		RenderOptions.BitmapScalingMode="Fant"
		Margin="15" Grid.Column="2"/>

	</Grid>
</UserControl>
